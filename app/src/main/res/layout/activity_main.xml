<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="50dp"
    android:background="@color/colorGrey"
    android:id="@+id/outsideRelativeLayout"
    tools:context="com.epicodus.bellsandwhistles.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentRelativeLayout"
        >

        <TextView
            android:layout_width="@dimen/itemSize"
            android:layout_height="@dimen/itemSize"
            android:text="Double Tap Me!"
            android:id="@+id/doubleTapTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#72c451"
            android:textSize="@dimen/shapeTextSize"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="@dimen/itemSize"
            android:layout_height="@dimen/itemSize"
            android:text="Long Click Me!"
            android:id="@+id/longTapTextView"
            android:background="@color/colorPrimaryDark"
            android:textSize="@dimen/shapeTextSize"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="@dimen/itemSize"
            android:layout_height="@dimen/itemSize"
            android:text="Drag Me!"
            android:id="@+id/dragTextView"
            android:backgroundTint="#fff000"
            android:background="@drawable/circle"
            android:textSize="@dimen/shapeTextSize"
            android:textColor="#000"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_below="@id/doubleTapTextView"
            />
        <TextView
            android:layout_width="@dimen/itemSize"
            android:layout_height="@dimen/itemSize"
            android:text="Fling Me!"
            android:backgroundTint="#FF0000"
            android:id="@+id/flingTextView"
            android:background="@drawable/circle"
            android:textSize="@dimen/shapeTextSize"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/dragTextView"
            android:layout_alignLeft="@+id/longTapTextView"
            android:layout_alignStart="@+id/longTapTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:id="@+id/shakeInstructionsTextView"
            android:text="Shake The Phone!"/>


    </RelativeLayout>


</RelativeLayout>
